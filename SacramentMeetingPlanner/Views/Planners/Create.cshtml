</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $(function () {
        $.getJSON('/hymns.json', function (hymn) {
            $.each(hymn, function (i, emp) {
                $(".hymnNames").append('<option>' + emp.songNumber + ' ' + emp.name + '</option>');
            });

        }).error(function () {
            console.log('error');
        });
    });

</script>
}
